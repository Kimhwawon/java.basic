package game.iinheritance;

public class Commoner {
	
	// 레벨, 체력, 아이디, 마나수치
	private int hp;
	private  int lv;
	private String name;
	private int mp;
	
	// 생성자는 레벨1, 체력20, 마나10을 기본으로, 아이디는 입력받아 처리
	public Commoner (String name) {
	// 생성자 내부에서 멤버변수를 초기화할때는 this.를 붙이는 경우가 많습니다.
		this.name = "화원공주";
		this.hp = 20;
		this.lv = 1;
		this.mp = 10;
	} // 여기까지 생성자 
	
		public void getInfo() {
			System.out.println("아이디 : " + name + ",  체력 : " + hp + ", 레벨 : " + lv + ", 마나 : " + mp);
		}
	
		
	

}
